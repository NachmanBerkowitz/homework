{
    "env": {
        "browser": true,
        "es6": true,
        "node":true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    
    "extends": "eslint:recommended",
               
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-console": "off",
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "wrap-iife": [
            "warn",
            "any"
        ]
    }
}